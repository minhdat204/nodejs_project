<!-- Phần content của contacts -->
<h2 class="my-4">Quản Lý Liên Hệ</h2>
<div class="table-responsive">
    <table class="table table-hover">
        <thead class="bg-dark text-white">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên</th>
                <th scope="col">Email</th>
                <th scope="col">SĐT</th>
                <th scope="col">Tiêu đề</th>
                <th scope="col">Trạng Thái</th>
                <th scope="col">Ngày Tạo</th>
                <th scope="col">Hành Động</th>
            </tr>
        </thead>
        <tbody>
            <% contacts.forEach(function(contact, index) { %>
                <tr>
                    <th scope="row"><%= index + 1 %></th>
                    <td><%= contact.name %></td>
                    <td><%= contact.email %></td>
                    <td><%= contact.phone %></td>
                    <td><%= contact.title %></td>
                    <td><%= contact.status %></td>
                    <td><%= contact.created_at.toDateString() %></td>
                    <td>
                        <a class="btn btn-info" data-toggle="modal" data-target="#viewModal-<%= contact.contact_id %>">Xem</a>
                        <a href="/contacts/process/<%= contact.contact_id %>" class="btn btn-success">Xử Lý</a>
                        <a href="/contacts/delete/<%= contact.contact_id %>" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa liên hệ này?');">Xoá</a>
                    </td>
                </tr>
                <!-- Modal Xem-->
                <div class="modal fade" id="viewModal-<%= contact.contact_id %>" tabindex="-1" role="dialog" aria-labelledby="viewModalLabel-<%= contact.contact_id %>" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="viewModalLabel-<%= contact.contact_id %>">Chi Tiết Nội Dung</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Tên: <%= contact.name %><br>
                                Tiêu đề: <%= contact.title %><br>
                                Tin nhắn: <%= contact.message %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </tbody>
    </table>
</div>
