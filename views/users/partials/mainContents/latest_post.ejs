<!--latest post-->
<section id="sliderSection">
  <div class="row">
    <div class="col-lg-8 col-md-8 col-sm-8">
      <div class="slick_slider">
        <% posts.forEach(function(post) { %>
          <div class="single_iteam">
            <a href="/user/posts/<%= post.post_id %>">
              <% if (post.image_url) { %>
                <img src="<%= post.image_url %>" alt="<%= post.title %>">
              <% } else { %>
                <img src="" alt="Default Image">
              <% } %>
            </a>
            <div class="slider_article">
              <h2><a class="slider_tittle" href="/user/posts/<%= post.post_id %>"><%= post.title %></a></h2>
              <p><%= post.content.substring(0, 150) %>...</p>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4">
      <div class="latest_post">
        <h2><span>Latest post</span></h2>
        <div class="latest_post_container">
          <div id="prev-button"><i class="fa fa-chevron-up"></i></div>
          <ul class="latest_postnav">
            <% posts.forEach(function(post) { %>
              <li>
                <div class="media">
                  <a href="user/posts/<%= post.post_id %>" class="media-left">
                    <% if (post.image_url) { %>
                      <img src="<%= post.image_url %>" alt="<%= post.title %>">
                    <% } else { %>
                      <img src="" alt="Default Image">
                    <% } %>
                  </a>
                  <div class="media-body">
                    <a href="user/posts/<%= post.post_id %>" class="catg_title"><%= post.title %></a>
                  </div>
                </div>
              </li>
            <% }); %>
          </ul>
          <div id="next-button"><i class="fa fa-chevron-down"></i></div>
        </div>
      </div>
    </div>
  </div>
</section>
